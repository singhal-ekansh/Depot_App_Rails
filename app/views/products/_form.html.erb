<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%# <%= form.label :image_url, style: "display: block" %>
    <%# <%= form.text_field :image_url %> 
    <%= form.file_field :images, multiple: true %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :discount_price, style: "display: block" %>
    <%= form.text_field :discount_price %>
  </div>

  <div>
    <%= form.label :permalink, style: "display: block" %>
    <%= form.text_field :permalink %>
  </div>

  <div>
    <%= form.label :category, style: "display: block" %>
    <%= collection_select(:product, :category_id, Category.all, :id, :name) %>
    <%# <%= form.select :category_id, Category.all.pluck(:name, :id), prompt: "Select One" %>
  </div>

  <div>
    <%= form.label :enabled, style: "display: block" %>
    <%= form.check_box :enabled %>
    
  </div>
  <BR>
  <div>
    <%= form.submit %>
  </div>
<% end %>
